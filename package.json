{
  "name": "smartmail-ai-sorter-gmx-style",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "overrides": {
    "semver": "^7.7.3"
  },
  "scripts": {
    "dev": "vite",
    "test": "npm run rebuild:node && vitest",
    "test:coverage": "npm run rebuild:node && vitest run --coverage",
    "test:components": "vitest run --config vitest.config.components.ts",
    "test:components:coverage": "vitest run --config vitest.config.components.ts --coverage",
    "test:components:watch": "vitest --config vitest.config.components.ts",
    "test:all": "npm run rebuild:node && vitest run && vitest run --config vitest.config.components.ts",
    "test:all:coverage": "npm run rebuild:node && vitest run --coverage && vitest run --config vitest.config.components.ts --coverage",
    "test:workspace": "npm run rebuild:node && vitest run --workspace vitest.workspace.ts",
    "test:workspace:coverage": "npm run rebuild:node && vitest run --workspace vitest.workspace.ts --coverage",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "rebuild:node": "npm rebuild better-sqlite3",
    "rebuild:electron": "electron-rebuild -f -m node_modules/better-sqlite3",
    "electron:dev": "npm run rebuild:electron && concurrently \"npm run dev\" \"wait-on tcp:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.38.0",
    "better-sqlite3": "^12.6.2",
    "imapflow": "^1.2.8",
    "lucide-react": "^0.562.0",
    "mailparser": "^3.9.1",
    "nanoid": "^5.1.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
